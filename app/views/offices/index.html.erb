<div class="flex min-h-full flex-col py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-6xl">
    <div class="bg-white px-6 py-8 shadow-sm sm:rounded-lg dark:bg-gray-800/50 dark:shadow-none dark:outline dark:-outline-offset-1 dark:outline-white/10">
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl/9 font-bold tracking-tight text-gray-900 dark:text-white">My Offices</h1>
        <%= link_to "Create New Office", new_office_path, class: "flex justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500" %>
      </div>

      <% if @offices.any? %>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          <% @offices.each do |office| %>
            <div class="bg-gray-50 dark:bg-gray-900/50 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3"><%= office.name %></h3>
              <div class="space-y-2 text-sm text-gray-600 dark:text-gray-300">
                <p><span class="font-medium text-gray-900 dark:text-white">Address:</span> <%= office.address %></p>
                <p><span class="font-medium text-gray-900 dark:text-white">City:</span> <%= office.city %>, <%= office.state %></p>
                <p><span class="font-medium text-gray-900 dark:text-white">ZIP:</span> <%= office.zip_code %></p>
                <% if office.phone_number.present? %>
                  <p><span class="font-medium text-gray-900 dark:text-white">Phone:</span> <%= office.phone_number %></p>
                <% end %>
              </div>
              <div class="mt-4 flex gap-2">
                <%= link_to "View", office_path(office), class: "flex-1 text-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-400" %>
                <%= link_to "Edit", edit_office_path(office), class: "flex-1 text-center rounded-md bg-gray-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-gray-500 dark:bg-gray-600 dark:hover:bg-gray-500" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400 mb-4">You don't have any offices yet.</p>
          <%= link_to "Create Your First Office", new_office_path, class: "inline-flex justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
