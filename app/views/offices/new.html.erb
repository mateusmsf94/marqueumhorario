<div class="flex min-h-full flex-col py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-2xl">
    <div class="bg-white px-6 py-8 shadow-sm sm:rounded-lg dark:bg-gray-800/50 dark:shadow-none dark:outline dark:-outline-offset-1 dark:outline-white/10">
      <h1 class="text-3xl/9 font-bold tracking-tight text-gray-900 dark:text-white mb-6">Create New Office</h1>

      <%= form_with(model: @office, class: "space-y-6") do |form| %>
        <% if @office.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 dark:bg-red-900/50">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                  <%= pluralize(@office.errors.count, "error") %> prohibited this office from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                  <ul class="list-disc space-y-1 pl-5">
                    <% @office.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
          <div class="mt-2">
            <%= form.text_field :name, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500", placeholder: "Office Name" %>
          </div>
        </div>

        <div>
          <%= form.label :address, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
          <div class="mt-2">
            <%= form.text_field :address, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500", placeholder: "Street Address" %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= form.label :city, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
            <div class="mt-2">
              <%= form.text_field :city, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500", placeholder: "City" %>
            </div>
          </div>

          <div>
            <%= form.label :state, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
            <div class="mt-2">
              <%= form.text_field :state, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500", placeholder: "State" %>
            </div>
          </div>
        </div>

        <div>
          <%= form.label :zip_code, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
          <div class="mt-2">
            <%= form.text_field :zip_code, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500", placeholder: "ZIP Code" %>
          </div>
        </div>

        <div>
          <%= form.label :phone_number, "Phone Number (optional)", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
          <div class="mt-2">
            <%= form.text_field :phone_number, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500", placeholder: "Phone Number" %>
          </div>
        </div>

        <div>
          <%= form.label :gmaps_url, "Google Maps URL (optional)", class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
          <div class="mt-2">
            <%= form.text_field :gmaps_url, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-indigo-500", placeholder: "https://maps.google.com/..." %>
          </div>
        </div>

        <div class="flex gap-4">
          <%= form.submit "Create Office", class: "flex-1 justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500" %>
          <%= link_to "Cancel", offices_path, class: "flex-1 text-center rounded-md bg-gray-600 px-3 py-2 text-sm/6 font-semibold text-white shadow-xs hover:bg-gray-500 dark:bg-gray-600 dark:hover:bg-gray-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
