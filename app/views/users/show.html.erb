<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Select an Office</h1>

    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">Provider Information</h2>
      <div class="space-y-2">
        <p><strong>Name:</strong> <%= @user.first_name %> <%= @user.last_name %></p>
        <p><strong>Email:</strong> <%= @user.email %></p>
        <p><strong>Phone:</strong> <%= @user.phone %></p>
      </div>
    </div>

    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-4">Available Offices</h2>
      
      <% if @offices.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @offices.each do |office| %>
            <%= link_to user_office_path(@user, office), class: "block bg-white shadow-md rounded-lg p-6 hover:shadow-lg transition duration-200 border-2 border-transparent hover:border-blue-500" do %>
              <h3 class="text-lg font-semibold mb-3 text-blue-600"><%= office.name %></h3>
              <div class="space-y-1 text-gray-700">
                <p><strong>Address:</strong> <%= office.address %></p>
                <p><strong>City:</strong> <%= office.city %>, <%= office.state %> <%= office.zip_code %></p>
                <% if office.phone_number.present? %>
                  <p><strong>Phone:</strong> <%= office.phone_number %></p>
                <% end %>
              </div>
              <div class="mt-4 text-blue-600 font-medium">
                Click to book an appointment →
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-yellow-50 border border-yellow-200 text-yellow-800 px-4 py-3 rounded">
          <p>This provider doesn't have any offices available at the moment.</p>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <%= link_to "← Back to Providers", users_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  </div>
</div>
