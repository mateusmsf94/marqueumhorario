<div class="flex min-h-full flex-col py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-6xl">
    <div class="bg-white px-6 py-8 shadow-sm sm:rounded-lg dark:bg-gray-800/50 dark:shadow-none dark:outline dark:-outline-offset-1 dark:outline-white/10">
      <div class="flex justify-between items-start mb-6">
        <div>
          <h1 class="text-3xl/9 font-bold tracking-tight text-gray-900 dark:text-white">Welcome, <%= @user.first_name %> <%= @user.last_name %></h1>
          <div class="mt-4 space-y-2">
            <p class="text-sm/6 text-gray-600 dark:text-gray-300"><span class="font-medium text-gray-900 dark:text-white">Email:</span> <%= @user.email %></p>
            <p class="text-sm/6 text-gray-600 dark:text-gray-300"><span class="font-medium text-gray-900 dark:text-white">Phone:</span> <%= @user.phone %></p>
          </div>
        </div>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "flex justify-center rounded-md bg-red-600 px-4 py-2 text-sm/6 font-semibold text-white shadow-xs hover:bg-red-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600 dark:bg-red-500 dark:shadow-none dark:hover:bg-red-400 dark:focus-visible:outline-red-500", data: { turbo: false } %>
      </div>
    </div>

    <div class="mt-8 bg-white px-6 py-8 shadow-sm sm:rounded-lg dark:bg-gray-800/50 dark:shadow-none dark:outline dark:-outline-offset-1 dark:outline-white/10">
      <div class="flex justify-between items-center">
        <div>
          <h2 class="text-2xl/9 font-bold tracking-tight text-gray-900 dark:text-white">My Offices</h2>
          <p class="mt-2 text-sm/6 text-gray-600 dark:text-gray-300">Manage your offices and team members</p>
        </div>
        <%= link_to "Manage Offices", offices_path, class: "flex justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-500" %>
      </div>
    </div>

    <div class="mt-8 grid md:grid-cols-2 gap-6">
      <div class="bg-white px-6 py-8 shadow-sm sm:rounded-lg dark:bg-gray-800/50 dark:shadow-none dark:outline dark:-outline-offset-1 dark:outline-white/10">
        <h2 class="text-2xl/9 font-bold tracking-tight text-gray-900 dark:text-white mb-6">My Appointments as Provider</h2>
        <% if @provided_appointments.any? %>
          <ul class="space-y-4">
            <% @provided_appointments.each do |appointment| %>
              <li class="border-b border-gray-200 dark:border-white/10 pb-4">
                <p class="text-sm/6 text-gray-900 dark:text-white"><span class="font-medium">Date:</span> <%= appointment.start_datetime.strftime("%B %d, %Y at %I:%M %p") %></p>
                <p class="text-sm/6 text-gray-900 dark:text-white"><span class="font-medium">Customer:</span> <%= appointment.customer.email %></p>
                <p class="text-sm/6 text-gray-900 dark:text-white"><span class="font-medium">Office:</span> <%= appointment.office.name %></p>
                <p class="text-sm/6 text-gray-900 dark:text-white"><span class="font-medium">Status:</span> <span class="inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 dark:bg-indigo-500/10 dark:text-indigo-400"><%= appointment.status %></span></p>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm/6 text-gray-500 dark:text-gray-400">No appointments as provider yet.</p>
        <% end %>
      </div>

      <div class="bg-white px-6 py-8 shadow-sm sm:rounded-lg dark:bg-gray-800/50 dark:shadow-none dark:outline dark:-outline-offset-1 dark:outline-white/10">
        <h2 class="text-2xl/9 font-bold tracking-tight text-gray-900 dark:text-white mb-6">My Appointments as Customer</h2>
        <% if @customer_appointments.any? %>
          <ul class="space-y-4">
            <% @customer_appointments.each do |appointment| %>
              <li class="border-b border-gray-200 dark:border-white/10 pb-4">
                <p class="text-sm/6 text-gray-900 dark:text-white"><span class="font-medium">Date:</span> <%= appointment.start_datetime.strftime("%B %d, %Y at %I:%M %p") %></p>
                <p class="text-sm/6 text-gray-900 dark:text-white"><span class="font-medium">Provider:</span> <%= appointment.provider.email %></p>
                <p class="text-sm/6 text-gray-900 dark:text-white"><span class="font-medium">Office:</span> <%= appointment.office.name %></p>
                <p class="text-sm/6 text-gray-900 dark:text-white"><span class="font-medium">Status:</span> <span class="inline-flex items-center rounded-md bg-indigo-50 px-2 py-1 text-xs font-medium text-indigo-700 dark:bg-indigo-500/10 dark:text-indigo-400"><%= appointment.status %></span></p>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm/6 text-gray-500 dark:text-gray-400">No appointments as customer yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
